{% extends 'base.html.twig' %}

{% block title %}Locations{% endblock %}

{% block breadcrumb %}
  {% include 'partials/_breadcrumb.html.twig' with { items: [
    { label: 'Accueil', url: path('home_index') },
    { label: 'Locations', url: path('order_index') }
  ] } %}
{% endblock %}

{% block body %}
<div class="card">
  <div style="display:flex; justify-content:space-between; align-items:center; gap:12px; margin-bottom:8px">
    <h1 style="margin:0">Locations</h1>
    <a class="btn btn-primary" href="{{ path('order_new') }}">Nouvelle location</a>
  </div>
  <div class="scroll-x">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Client</th>
          <th>Date</th>
          <th>Statut</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for o in orders %}
        <tr>
          <td><a href="{{ path('order_show', {id: o.id}) }}">#{{ o.id }}</a></td>
          <td>{{ o.customerName }}</td>
          <td>{{ o.createdAt|date('Y-m-d H:i') }}</td>
          <td>
            {% set cls = 'badge badge-open' %}
            <span class="{{ cls }}">OPEN</span>
          </td>
          <td>
            <div style="display:flex; gap:8px; align-items:center">
              <a class="btn btn-outline" href="{{ path('order_show', {id: o.id}) }}">Voir</a>
              <form method="post" action="{{ path('order_return', {id: o.id}) }}" onsubmit="return confirm('Confirmer la restitution ?');">
                <button class="btn btn-outline btn-danger">Rendre</button>
              </form>
            </div>
          </td>
        </tr>
        {% else %}
        <tr><td colspan="4"><em>Aucune commande</em></td></tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}


